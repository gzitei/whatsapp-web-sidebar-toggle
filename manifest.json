{
  "manifest_version": 3,
  "name": "WhatsApp Web Sidebar Toggle",
  "description": "Hide/show the WhatsApp Web sidebar.",
  "version": "1.1.0",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab", "scripting"],
  "commands": {
    "toggle": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Toggle sidebar"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
